@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Informação pessoal";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>
            A sua conta contém dados pessoais que você nos forneceu. Esta página permite fazer o download ou excluir esses dados.
        </p>
        <p>
            <strong>
                A exclusão desses dados removerá permanentemente sua conta e isso não poderá ser recuperado.
            </strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Apagar</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 