@model FuncoesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success">Nova Função</a>
</p>
<table class="table table-info">
    <thead>
        <tr>
            <th>Funcões</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Funcoes) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFuncao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FuncaoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.FuncaoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.FuncaoId">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@for (int i = Model.PrimeiraPagina; i <= Model.UltimaPagina; i++) {
    @if (i == Model.PaginaAtual) {
        <a href="#" class="btn btn-primary">@i</a>
    } else {
        <a asp-action="Index" asp-route-page="@i" class="btn btn-outline-info ">@i</a>
    }
}
