@model GestaoTarefasIPG.Models.Funcao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Funcão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFuncao" class="control-label"></label>
                <input asp-for="NomeFuncao" class="form-control" />
                <span asp-validation-for="NomeFuncao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a lista de funções</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
