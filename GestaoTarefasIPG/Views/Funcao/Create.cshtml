@model GestaoTarefasIPG.Models.Funcao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar nova função</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFuncao" class="control-label">Nome da Função</label>
                <input asp-for="NomeFuncao" class="form-control" />
                <span asp-validation-for="NomeFuncao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


