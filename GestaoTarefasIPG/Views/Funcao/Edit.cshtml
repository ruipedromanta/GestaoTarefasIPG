@model GestaoTarefasIPG.Models.Funcao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Funcão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FuncaoId" />
            <div class="form-group">
                <label asp-for="NomeFuncao" class="control-label">Nome da Função</label>
                <input asp-for="NomeFuncao" class="form-control" />
                <span asp-validation-for="NomeFuncao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

