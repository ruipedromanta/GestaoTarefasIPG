@model IEnumerable<GestaoTarefasIPG.Models.Escola>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEscola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEscola)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EscolaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EscolaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EscolaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
