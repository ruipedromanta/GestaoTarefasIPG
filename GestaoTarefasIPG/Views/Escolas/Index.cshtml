@model IEnumerable<GestaoTarefasIPG.Models.Escola>

@{
    ViewData["Title"] = "Index";
}

<h1>Escolas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar nova escola</a>
</p>
<table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEscola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEscola)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EscolaId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EscolaId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EscolaId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
