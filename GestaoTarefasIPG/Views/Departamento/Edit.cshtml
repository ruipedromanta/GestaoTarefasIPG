@model GestaoTarefasIPG.Models.Departamento

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartamentoId" />
            <div class="form-group">
                <label asp-for="NomeDepartamento" class="control-label">Nome do departamento</label>
                <input asp-for="NomeDepartamento" class="form-control" />
                <span asp-validation-for="NomeDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table>
                    <tr>
                    <th>
                        <input type="submit" value="Gravar" class="btn btn-success" />
                    </th>
                    <th>|</th>
                    <th>
                        <a asp-action="Index" class="btn btn-primary">Voltar</a>
                    </th>
                        </tr>
                </table>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
