@model GestaoTarefasIPG.Models.Departamento

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartamentoId" />
            <div class="form-group">
                <label asp-for="NomeDepartamento" class="control-label">Nome Departamento</label>
                <input asp-for="NomeDepartamento" class="form-control" />
                <span asp-validation-for="NomeDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDepartamento" class="control-label">Número Departamento</label>
                <input asp-for="NumeroDepartamento" class="form-control" />
                <span asp-validation-for="NumeroDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
