@model GestaoTarefasIPG.Models.Departamento

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem a certeza que pretende apagar?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="NomeDepartamento" class="control-label">Nome do departamento</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDepartamento)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
